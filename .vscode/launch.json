{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET 8 Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0/Barebone.dll",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": true
    },
    {
      "name": ".NET 8 Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}